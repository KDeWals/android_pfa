<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOM : "
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/et_luql_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="NOM"
            android:textStyle="italic"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prénom : "
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/et_luql_firstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Prénom"
            android:textStyle="italic"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adresse mail : "
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/et_luql_email_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="email@domain.com"
            android:textStyle="italic"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rôle : "
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/et_luql_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="admin | lambda"
            android:textStyle="italic"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Droits de l'utilisateur : "
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/et_luql_rights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Lect. | Lect./Écrit."
            android:textStyle="italic"
            />


    </LinearLayout>







</LinearLayout>
